package ExamPreparation;

import java.util.Scanner;

public class p01OscarsCeremony {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);

        int rent = Integer.parseInt(scanner.nextLine());
        double priceOfStatuettes = rent * 0.7;
        double priceOfCatering = priceOfStatuettes * 0.85;
        double priceOfSound = priceOfCatering * 0.5;

        double total = rent + priceOfCatering + priceOfStatuettes + priceOfSound;
        System.out.printf("%.2f",total);

    }
}
